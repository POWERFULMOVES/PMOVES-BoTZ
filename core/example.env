# ===== PMOVES Consolidated Environment Configuration =====
# This file contains all environment variables used across agent packs.
# Copy to .env and fill in your values.
# Variables are grouped by pack usage.

# ===== COMMON (All Packs) =====
# Postman API integration
POSTMAN_API_KEY=
POSTMAN_API_BASE_URL=https://api.postman.com

# Tailscale for remote access (Mini, Multi, Pro)
TS_AUTHKEY=

# ===== MINI PACK ONLY =====
# Branding / channels
SLACK_CHANNEL=#cataclysm-deploys
DOCS_LOG_CHANNEL=#cataclysm-deploys

# Notifiers
SLACK_BOT_TOKEN=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Crush MCP
CRUSH_API_KEY=

# Hostinger / deploy
HOSTINGER_API_KEY=
HOSTINGER_PROJECT_ID=
HOSTINGER_ENV=staging

# n8n / runners
N8N_RUNNERS_AUTH_TOKEN=

# Core services
HIRAG_URL=http://hi-rag-gateway-v2-gpu:8086
MEILI_URL=http://meilisearch:7700
MEILI_MASTER_KEY=
QDRANT_URL=http://qdrant:6333
NEO4J_URL=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_SECURE=false

# UI / Playwright
PLAYWRIGHT_BASE_URL=https://staging.example.com

# ===== PRO PACK ONLY =====
# E2B Sandbox
E2B_API_KEY=
SANDBOX_TTL_SEC=1800

# Vision-Language Provider
VL_PROVIDER=ollama
VL_MODEL=qwen2.5-vl:14b
OLLAMA_BASE_URL=http://host.docker.internal:11434
OPENAI_API_KEY=

# ===== PRO PLUS PACK ONLY =====
